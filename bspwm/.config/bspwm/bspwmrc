#! /bin/sh

bspc config border_width 4
bspc config window_gap 6
bspc config focused_border_color '#746c48'

bspc config split_ratio                0.5
bspc config borderless_monocle         true
bspc config gapless_monocle            true
bspc config history_aware_focus        true
bspc config auto_alternate             true
bspc config focus_follows_pointer      true
bspc config remove_disabled_monitors   true
bspc config remove_unplugged_monitors  true
bspc config merge_overlapping_monitors true

# Configure my monitors
$HOME/bin/monitor-configuration
$HOME/bin/wallpaper

if [ "$(pgrep -cx panel)" -ge 1 ] ; then
	echo "Restarting panel"
	pkill -x panel
fi

"$HOME/.config/bspwm/panel" &

# Autostart only if no window is active yet
[[ -z "$(xtitle)" ]] && "$HOME/.config/bspwm/autostart" > /dev/null &

# wait for the panel
wait
