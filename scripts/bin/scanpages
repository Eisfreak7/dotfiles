#! /bin/bash
WIDTH='210' #TODO configurable
HEIGHT='300'

# There are really only 2 qualitys:
# 600dpi takes about 50 secs/ page, 300 about 14.
# Space: 600 -> 100M, 500 -> 45M, 300 -> 25M

duplex=1
original=0
jpg_quality=15
png=0
dpi='500'
color=0
limit=0

while [[ $# -gt 0 ]]; do
	key="$1"
	case $key in
		-s|--simplex)
			duplex=0
			;;
		-o|--original)
			original=1
			;;
		-q|--jpg-quality)
			jpg_quality="$2"
			shift
			;;
		-p|--png)
			png=1
			;;
		-d|--dpi)
			dpi="$2"
			shift
			;;
		-c|--color)
			color=1
			;;
		-l|--limit)
			limit="$2"
			shift
			;;
		*)
			echo "Unknown option: \"$key\". Ignoring."
			;;
	esac
	shift
done

if [[ $duplex -eq 0 ]]; then
	scanimage_source='ADF Front'
	scanimage_batchcount=1
else
	scanimage_source='ADF Duplex'
	scanimage_batchcount=2
fi

if [[ $png -eq 0 ]]; then
	target_ext="jpg"
else
	target_ext="png"
fi

dir="$(pwd)"
tmpdir="$(mktemp --directory)"
cd "$tmpdir" || exit 1

(( i = 0 ))
(( pages = 0 ))
while (( pages < limit )) || (( limit == 0 )) ; do
	scanimage \
		--device-name=canon_dr \
		--source "$scanimage_source" \
		--batch="$i-%d.pnm" \
		--batch-count="$scanimage_batchcount" \
		--resolution "$dpi" \
		--page-height "$HEIGHT" \
		--page-width "$WIDTH" \
		-y "$HEIGHT" \
		-x "$WIDTH" \
		--mode 'Color' || break

		# cp "${i}-1.pnm" "${dir}/" # TODO optionally retain original
		src_file="${i}-1.pnm"
		target_without_ext="${dir}/$((i + 1))"
		if (( original == 0 )); then
			process_scan "$src_file" "${target_without_ext}.${target_ext}" "$jpg_quality" "$png" "$color" &
		else
			cp "$src_file" "${target_without_ext}.pnm"
		fi
		if [[ $duplex -ne 0 ]]; then
			src_file="${i}-2.pnm"
			target_without_ext="${dir}/$((i + 2))"
			if (( original == 0 )); then
				process_scan "$src_file" "${target_without_ext}.${target_ext}" "$jpg_quality" "$png" "$color" &
			else
				cp "$src_file" "${target_without_ext}.pnm"
			fi
			(( i += 2 ))
		else
			(( i += 1 ))
		fi
		(( pages += 1 ))
done

cd "$dir" || exit 1

wait
rm -r "$tmpdir"
