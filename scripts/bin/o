#!/bin/bash
# Open

open_with() {
	"$1" "$2" >/dev/null 2>&1 &disown
}

while [[ $# -ge 1 ]]; do
	ext=${1##*.}
	case $ext in
		"pdf")
			open_with zathura "$1"
			;;
		"mobi")
			open_with ebook-viewer "$1"
			;;
		"epub")
			open_with ebook-viewer "$1"
			;;
		*)
			open_with xdg-open "$1"
			;;
	esac
	shift
done
