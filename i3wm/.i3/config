#########
# Modes #
#########

# Mode to exit i3wm
set $mode_system System (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (Shift+s) shutdown
set $i3exit $i3_path/scripts/i3exit
mode "$mode_system" {
    bindsym l exec --no-startup-id $i3_path/scripts/i3exit lock, mode "default"
    bindsym e exec --no-startup-id $i3_path/scripts/i3exit logout, mode "default"
    bindsym s exec --no-startup-id $i3_path/scripts/i3exit suspend, mode "default"
    bindsym h exec --no-startup-id $i3_path/scripts/i3exit hibernate, mode "default"
    bindsym r exec --no-startup-id $i3_path/scripts/i3exit reboot, mode "default"
    bindsym Shift+s exec --no-startup-id $i3_path/scripts/i3exit shutdown, mode "default"  

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

# Mode to control mpd
set $mode_mpd Mpd (p) play/pause, (+) vol+, (-) vol-, (<) prev, (>) next, (r) random
mode "$mode_mpd" {
	bindsym p exec --no-startup-id mpc toggle, mode "default"
	bindsym plus exec --no-startup-id mpc volume +5
	bindsym minus exec --no-startup-id mpc volume -5
	bindsym < exec --no-startup-id mpc prev, mode "default"
	bindsym > exec --no-startup-id mpc next, mode "default"
	bindsym r exec --no-startup-id random, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

# Mode to resize windows
mode "resize" {
        bindsym h resize shrink width  10 px or 10 ppt
        bindsym j resize grow   height 10 px or 10 ppt
        bindsym k resize shrink height 10 px or 10 ppt
        bindsym l resize grow   width  10 px or 10 ppt
        bindsym Shift+h resize shrink width  1 px or 1 ppt
        bindsym Shift+j resize grow   height 1 px or 1 ppt
        bindsym Shift+k resize shrink height 1 px or 1 ppt
        bindsym Shift+l resize grow   width  1 px or 1 ppt
        bindsym Left resize shrink width  10 px or 10 ppt
        bindsym Down resize grow   height 10 px or 10 ppt
        bindsym Up resize shrink   height 10 px or 10 ppt
        bindsym Right resize grow  width  10 px or 10 ppt

        bindsym Return mode "default"
        bindsym Escape mode "default"
		bindsym $mod+r mode "default"
}
