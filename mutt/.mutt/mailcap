# MS Word documents
application/msword; libreoffice %s

# Text
text/plain; less %s

# Images
image/jpg; feh --scale-down %s
image/jpeg; feh --scale-down %s
image/pjpeg; feh --scale-down %s
image/png; feh --scale-down %s
image/gif; feh --scale-down %s

# PDFs
application/pdf; zathura %s

# HTML
text/html; ( cp %s ${TMPDIR:-'/tmp'}/site.html && o ${TMPDIR:-'/tmp'}/site.html && rm ${TMPDIR:-'/tmp'}/site.html  ); test=test -n "$DISPLAY"; needsterminal;
text/html; w3m -I %{charset} -T text/html; copiousoutput;
text/html; 

# Unidentified files
application/octet-stream;nvim %s

